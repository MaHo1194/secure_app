<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".insecure_communication_test_https"
    android:background="#242424">

        <TextView
            android:id="@+id/ueberschrift"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Antwort vom Backend:"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:textColor="@android:color/white"
            android:textSize="33sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView_api"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Um die Daten vom Server anzufragen, einfach auf den Button klicken."
            android:textColor="@android:color/white"
            android:layout_below="@id/ueberschrift"
            android:paddingBottom="30dp"
            android:paddingTop="30dp"
            android:textSize="20sp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Anfrage an das Backend senden"
            android:id="@+id/button_api"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_below="@id/textView_api"
            android:textSize="20sp">
        </Button>

</RelativeLayout>
