<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#242424"
    tools:context=".MainMenu">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Schwachstellen"
            android:textSize="30dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp">

        </TextView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="75dp">


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Datenspeicherung"
                android:id="@+id/insecure_data_storage"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="20sp">
            </Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Abgesicherte Backend-Kommunikation"
                android:id="@+id/insecure_communication"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="20sp">
            </Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Authentifizierung mit JWT"
                android:id="@+id/insecure_authentication_jwt"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="20sp">
            </Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="XSS und SQLi"
                android:id="@+id/client_side_injection_button_xml"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="20sp">
            </Button>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Weitere Informationen"
                android:textSize="30dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="10dp">
            </TextView>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wie starten?"
                android:id="@+id/button_how_to_start_xml"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="20sp">
            </Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Danksagungen und Weiterführende Links"
                android:id="@+id/button_danksagungen_links_xml"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="20sp">
            </Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hinweise zum Datenschutz"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="20sp">
            </Button>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="made with ♥ by Marcel Hopp in 2020"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp">
            </TextView>

        </LinearLayout>

    </RelativeLayout>


</ScrollView>